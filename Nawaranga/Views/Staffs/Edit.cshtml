@model Staff

@{
    ViewData["Title"] = "Update staff";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update @Model.FullName Details</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Position" class="control-label"></label>
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ServiceDate" class="control-label"></label>
                        <input asp-for="ServiceDate" class="form-control" />
                        <span asp-validation-for="ServiceDate" class="text-danger"></span>
                    </div>
                    <p></p>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-lg-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


}